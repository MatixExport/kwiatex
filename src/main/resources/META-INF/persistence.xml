<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
    <class>indie.outsource.model.Client</class>
    <class>indie.outsource.model.Transaction</class>
    <class>indie.outsource.model.TransactionItem</class>
    <class>indie.outsource.model.products.Tree</class>
    <class>indie.outsource.model.products.Plant</class>
    <class>indie.outsource.model.products.Seeds</class>
    <class>indie.outsource.model.products.GrassesSeeds</class>
    <class>indie.outsource.model.products.Flower</class>
    <class>indie.outsource.model.products.VegetableSeeds</class>
    <class>indie.outsource.model.ProductInfo</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>NONE</shared-cache-mode>
<!--    Todo: Add bean validation-->
    <validation-mode>NONE</validation-mode>

    <properties>

      <property name="hibernate.connection.isolation" value="2" />

      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql:nbddb"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.user" value="nbd"/>
      <property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name = "hibernate.show_sql" value = "true" />
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect"/>

    </properties>
  </persistence-unit>
</persistence>
