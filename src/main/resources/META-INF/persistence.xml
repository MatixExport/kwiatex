<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
    <class>indie.outsource.model.Client</class>
    <class>indie.outsource.model.Transaction</class>
    <class>indie.outsource.model.TransactionItem</class>
    <class>indie.outsource.model.products.Tree</class>
    <class>indie.outsource.model.products.Plant</class>
    <class>indie.outsource.model.products.Seeds</class>
    <class>indie.outsource.model.products.GrassesSeeds</class>
    <class>indie.outsource.model.products.Flower</class>
    <class>indie.outsource.model.products.VegetableSeeds</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>NONE</shared-cache-mode>
<!--    Todo: Add bean validation-->
    <validation-mode>NONE</validation-mode>

    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:derby:memory:target/ShopDB;create=true"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="jakarta.persistence.jdbc.user" value="nbd"/>
      <property name="jakarta.persistence.jdbc.password" value="nbd"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
